---
import { ComposedCheckoutOptions } from '../../types'
import ComponentCheckout from './ComposedCheckout.vue'

type Props = ComposedCheckoutOptions

const {
	passportItem,
	fiat,
	amount,
	propertyAddress,
	fiatCurrency,
	rpcUrl,
	payload,
	description,
	itemImageSrc,
	itemName,
	accessControlUrl,
	accessControlDescription,
	chainId,
	base,
	offering,
} = Astro.props
---

<ComponentCheckout
	client:load
	{...{
		destination: propertyAddress,
		offering,
		passportItem,
		fiat,
		amount,
		propertyAddress,
		fiatCurrency,
		rpcUrl,
		payload,
		description,
		itemImageSrc,
		itemName,
		accessControlUrl,
		accessControlDescription,
		chainId,
		base,
	}}
/>
