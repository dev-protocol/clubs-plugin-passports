{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"module": "ESNext",
		"outDir": "dist",
		"declaration": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"verbatimModuleSyntax": false,
		"types": ["node", "astro/client"]
	},
	"include": [
		"src",
		".preview/**/*",
		"config.js",
		"rollup.config.js",
		"tailwind.config.mjs",
		"vitest.config.ts"
	]
}
